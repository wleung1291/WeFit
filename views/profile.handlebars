<html>
<head>
  <title>Profile</title>  
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
<!--<link href="css/bootstrap.min.css" rel="stylesheet">
  <link href="css/bootstrap-theme.min.css" rel="stylesheet">-->
  <link href="css/WeFit.css" rel="stylesheet">
  <link rel="stylesheet" href="css/base.css">
  <link rel="stylesheet" href="css/fixed-navigation-bar.css">
  <link rel="stylesheet" href="css/progress-bar.css">
</head>
<body>
  <nav class="fixed-nav-bar">
    <div id="menu" class="menu">
      <a class="sitename" href="/">WeFit</a>
      <a class="show" href="#menu">Menu</a><a class="hide" href="#hidemenu">Menu</a>
      <ul class="menu-items">
        <li><a href="profile">Profile</a></li>
        <li><a href="dailies">Dailies</a></li>
        <li><a href="inventory">Inventory</a></li>
        <li><a href="achievements">Achievements</a></li>
        <li><a href="faq">Help</a></li>
    </ul>
    </div>
  </nav>
  <div class="container">
    <h1 align="center">Profile</h1>
    <div class = "profile">
      <table align = "center">
        <tr>  
          {{#each user}}
          <td align="center"><img src = "{{userPic}}"></td>
          <td><p id = "name"> {{name}} </br> Lvl {{lvl}} </p></td>
          {{/each}}
        </tr>
       </table>     
    </div>
    <br>
    <div class = "progress">
      <table align="center">
        {{#each section}}
        <tr>
          <td align="center" class="exerciseicon"><img src = "{{img}}"></td>  
          <td class="lvl"><p>{{exercise}} - Level {{level}}</br> <progress value="{{experience}}" min="0" max="100"></progress></p>
          </td>
        </tr>
        {{/each}}
      </table>
    </div>
  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="js/dailies.js"></script>
    <script src="js/jquery-1.11.0.js"></script>
    <script src="/js/bootstrap.js"></script> 
</body>
</html>