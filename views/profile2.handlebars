  <link rel="stylesheet" href="css/profile2.css">
</head>
<body>
  <nav class="fixed-nav-bar">
    <div id="menu" class="menu">
      <a class="sitename" href="profile">WeFit</a>
      <a class="show" href="#menu">Menu</a><a class="hide" href="#hidemenu">Menu</a>
      <ul class="menu-items">
        <li><a href="profile">Profile</a></li>
        <li><a href="dailies">Dailies</a></li>
        <li><a href="inventory">Pet</a></li>
        <li><a href="achievements">Achievements</a></li>
        <li><a href="faq">Help</a></li>
        <li><a href="/">Log Out</a></li>
    </ul>
    </div>
  </nav>
  <div class="container">
    <h1 align="center">Profile</h1>
    <div class = "profile">
      <table align = "center">
        <tr>  
          {{#each user}}
          <td align="center"><img src = "{{userPic}}"></td>
          <td><p id = "name"> {{name}} </br> Lvl {{lvl}} </p></td>
          {{/each}}
        </tr>
       </table>
        <div id="hp" align="right">
          <p><img id="petimg" src="images/green_blob.png"/>Pet HP: <progress align="left" id="health" value="60" max="100"></progress></p>
        </div>            
    </div>
    <div class="progress">
      <table align="center">
        {{#each section}}
        <tr id="{{slide}}">
          <td align="center" class="exerciseicon2"><img src = "{{img}}"></td>  
          <td class="lvl"><p>{{exercise}} - Level {{level}}</br> <progress value="{{experience}}" min="0" max="100"></progress></p>
          </td>
        </tr>
        <tr>
          <td colspan="2" id="{{panel}}" class="workout"><p align="center">{{exercise}} Workouts:<br>{{workouts}}</p></td>
        </tr>
        {{/each}}
      </table>
    </div>
  </div>

